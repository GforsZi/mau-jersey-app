{
    "plugins": ["@shufo/prettier-plugin-blade", "@prettier/plugin-php"],
    "overrides": [
        {
            "files": "*.blade.php",
            "options": {
                "parser": "blade",
                "tabWidth": 2,
                "useTabs": false,
                "braceStyle": "1tbs",
                "printWidth": 200
            }
        }
    ],
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 200
}
